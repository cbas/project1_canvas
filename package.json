{
  "name": "Canvasgame",
  "version": "1.0.0",
  "description": "Canvasgame",
  "main": "game.js",
  "scripts": {
    "start": "npm run build && npm run start-server",
    "start-server": "http-server dist",
    "test": "standard",
    "clean": "rm -rf dist",
    "build": "npm run clean && mkdir dist && npm run build-html && npm run build-css && npm run build-js",
    "build-html": "cp game/index.html dist/index.html",
    "build-css": "cp game/game.css dist/game.css",
    "build-js": "browserify game/game.js --outfile dist/game.js --transform babelify",
    "watch": "npm run build && npm run watch-js & npm run start-server",
    "watch-js": "watchify game/game.js --outfile dist/game.js --transform babelify --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/y10j/project1_canvas.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/y10j/project1_canvas/issues"
  },
  "homepage": "https://github.com/y10j/project1_canvas#readme",
  "dependencies": {
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-stage-0": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1"
  }
}
